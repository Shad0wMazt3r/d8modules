<?php

/*
 * Implements hook_ENTITY_TYPE_update()
 */
function social_footer_block_content_update(Drupal\Core\Entity\EntityInterface $entity) {
	// Clear cache if BlockContent is of type 'social_media_footer'
	if ($entity->bundle() == 'social_media_footer') {
		\Drupal::service('cache.render')->invalidateAll();
	}
}
